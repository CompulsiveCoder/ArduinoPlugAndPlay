 [Unit]
 Description=Arduino Plug and Play Service
 After=multi-user.target

 [Service]
 Type=idle
 ExecStart=/bin/sh -c "mkdir -p {INSTALL_PATH}; cd {INSTALL_PATH}; wget --no-cache -O - https://raw.githubusercontent.com/CompulsiveCoder/ArduinoPlugAndPlay/{BRANCH}/scripts-web/start-from-web.sh | sh -s {BRANCH}"

 [Install]
 WantedBy=multi-user.target

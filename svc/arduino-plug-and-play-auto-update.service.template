 [Unit]
 Description=Arduino Plug and Play Service
 After=multi-user.target

 [Service]
 Type=idle
 ExecStart=/bin/bash -c "mkdir -p {INSTALL_PATH}; cd {INSTALL_PATH}; curl --connect-timeout 3 -o start-from-web.sh -f https://raw.githubusercontent.com/CompulsiveCoder/ArduinoPlugAndPlay/{BRANCH}/scripts-web/start-from-web.sh; bash start-from-web.sh {BRANCH}"

 [Install]
 WantedBy=multi-user.target
